@page "{id:int?}"
@model Wba.StovePalace.Pages.Stoves.DeleteModel

@{
    ViewData["Title"] = "Kachel wissen";
}

<h1>Een kachel verwijderen</h1>

<h3>Ben je zeker dat deze kachel mag verwijderd worden?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stove.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stove.Brand.BrandName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stove.Fuel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stove.Fuel.FuelName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stove.ModelName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stove.ModelName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stove.Performance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stove.Performance)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stove.SalesPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stove.SalesPrice)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Stove.Id" />
        <div class="btn-group">
            <button type="submit" class="btn  btn-danger" title="Wissen">
                <i class="fas fa-trash-alt"></i>
            </button>
            <a asp-page="./Index" class="btn btn-success" title="Annuleren">
                <i class="fas fa-undo-alt"></i>
            </a>
        </div>
    </form>
</div>
